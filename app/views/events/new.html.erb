<div class="container">
  <h4 class="center-align title"> Create an Event</h4>
  <div class="row">
    <div class="col s12 l6 z-depth-1">
      <p> This is what your event will look like</p>
      <img src="<%= image_path("event-preview.png") %>" class="fullimg"></img>
    </div>
    <form class="col s12 l6">
      <div class="create-event-form">
        <div class="row">
          <div class="input-field col s12">
            <input placeholder="Ironhack" id="company_name" type="text" class="validate">
            <label for="company_name" class="active">Company Name</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input placeholder="eMerge Americas Hackathon" id="event_name" type="text" class="validate">
            <label for="event_name">Event Name</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input placeholder="MDC Wolfson Campus Idea Center"  id="location" type="text" class="validate">
            <label for="location">Location</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input placeholder="A gathering of developers doing what they do best" id="description" type="text" class="validate">
            <label for="description">Description</label>
          </div>
        </div>
        <form action="social-icons">
          <div class="file-field">
            <input class="file-path validate" type="text" style="margin-top:50px;"/>
            <div class="btn">
              <span>Upload Image</span>
              <input type="file" />
            </div>
          </div>  
        </form>
        <div class="center-align">
          <a class="waves-effect waves-light btn-large"><i class="fa fa-calendar left"></i>Create Event</a>
        </div>
      </div>
    </form>
  </div>
</div>
